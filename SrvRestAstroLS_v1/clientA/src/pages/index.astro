---
import Layout from '../layouts/Layout.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.svelte';
---

<Layout title="Demo UI" theme_daisyui="emerald" metaDescription="Demo Tailwind v4 + DaisyUI 5">
  <main class="container mx-auto p-6 space-y-8">
    <!-- (Opcional) Selector de tema -->
    <ThemeSwitcher client:load />

    <!-- Hero -->
    <section class="hero bg-base-200 rounded-box">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-4xl font-bold">Astro + Svelte + Tailwind v4 + DaisyUI 5</h1>
          <p class="py-6">Si ves estilos y colores, está todo OK ✅</p>
          <button class="btn btn-primary">Botón primario</button>
        </div>
      </div>
    </section>
<!-- Open the modal using ID.showModal() method -->
<button class="btn" onclick="my_modal_1.showModal()">open modal</button>
<dialog id="my_modal_1" class="modal">
  <div class="modal-box">
    <h3 class="text-lg font-bold">Hello!</h3>
    <p class="py-4">Press ESC key or click the button below to close</p>
    <div class="modal-action">
      <form method="dialog">
        <!-- if there is a button in form, it will close the modal -->
        <button class="btn">Close</button>
      </form>
    </div>
  </div>
</dialog>    

    <!-- Tarjetas -->
    <section class="grid gap-4 md:grid-cols-3">
      <div class="card bg-base-200">
        <div class="card-body">
          <h2 class="card-title">Card</h2>
          <p>Componente DaisyUI listo.</p>
          <div class="card-actions">
            <button class="btn btn-outline">Acción</button>
          </div>
        </div>
      </div>

      <div class="card bg-base-200">
        <div class="card-body">
          <h2 class="card-title">Alert</h2>
          <div class="alert alert-info">Este es un alert info</div>
        </div>
      </div>

      <div class="card bg-base-200">
        <div class="card-body">
          <h2 class="card-title">Badges</h2>
          <div class="flex gap-2">
            <div class="badge badge-primary">primary</div>
            <div class="badge badge-secondary">secondary</div>
            <div class="badge badge-accent">accent</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Navbar -->
    <div class="navbar bg-base-200 rounded-box">
      <div class="flex-1">
        <a class="btn btn-ghost text-xl">Mi App</a>
      </div>
      <div class="flex-none gap-2">
        <button class="btn btn-ghost">Login</button>
        <button class="btn btn-primary">Signup</button>
      </div>
    </div>
<section class="hero bg-base-200 rounded-box my-6">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-4xl font-bold">Prueba de temas DaisyUI</h1>
      <p class="py-6">Cambiá el tema y mirá colores de fondo y botón</p>
      <button class="btn btn-primary">Botón primario</button>
    </div>
  </div>
</section>

<div class="grid gap-4 md:grid-cols-3">
  <div class="card bg-base-200">
    <div class="card-body">
      <h2 class="card-title">Card</h2>
      <div class="badge badge-primary">primary</div>
      <div class="badge badge-secondary">secondary</div>
      <div class="badge badge-accent">accent</div>
    </div>
  </div>
  <div class="card bg-base-200">
    <div class="card-body">
      <h2 class="card-title">Alert</h2>
      <div class="alert alert-info">Info</div>
    </div>
  </div>
  <div class="card bg-base-200">
    <div class="card-body">
      <h2 class="card-title">Base colors</h2>
      <div class="p-2 bg-base-100 rounded-box">base-100</div>
      <div class="p-2 bg-base-200 rounded-box">base-200</div>
      <div class="p-2 bg-base-300 rounded-box">base-300</div>
    </div>
  </div>
</div>
    
  </main>
</Layout>

